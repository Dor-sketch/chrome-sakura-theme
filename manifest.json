{
  "manifest_version": 3,
  "name": "Modern Sakura Theme",
  "version": "1.1",
  "description": "A modern designer award-inspired Sakura theme for Google Chrome, without external images.",
  "theme": {
    "colors": {
      "frame": [255, 235, 238],
      "frame_inactive": [250, 250, 250],
      "frame_incognito": [230, 230, 250],
      "frame_incognito_inactive": [245, 245, 245],
      "toolbar": [255, 205, 210],
      "tab_text": [158, 71, 71],
      "tab_background_text": [128, 128, 128],
      "bookmark_text": [158, 71, 71],
      "ntp_text": [158, 71, 71],
      "ntp_background": [255, 255, 255],
      "ntp_link": [233, 30, 99],
      "ntp_header": [233, 30, 99],
      "ntp_section": [255, 240, 245],
      "ntp_section_text": [158, 71, 71],
      "button_background": [244, 143, 177],
      "control_background": [255, 240, 240]
    },
    "tints": {
      "buttons": [0.33, 0.5, 0.47],
      "frame": [0.0, 0.0, 0.5],
      "frame_inactive": [0.0, 0.0, 0.5],
      "background_tab": [0.3, 0.6, 0.6]
    },
    "properties": {
      "ntp_background_alignment": "bottom",
      "ntp_background_repeat": "no-repeat",
      "ntp_logo_alternate": 1
    }
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}